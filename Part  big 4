public class Main {
    public static void main (String [] args) {
        String answer;
        boolean exit;
        System.out.println ("Сидит дед, во сто шуб одет, кто его раздевает, тот слезы проливает");
        Scanner inputAnswer = new Scanner (System.in);
        exit = false;
        for(int i = 1; i <= 3; i++){
            if (exit == true)
                break;
            answer = inputAnswer.next ();
            switch (answer){
                case ("Заархивированный вирус"):
                    System.out.println ("Правильно!");
                    exit = true;
                    break;
                case ("Подсказка"):
                    if (i = 1) {System.out.println ("Подсказка: Заархивированный вирус.");}
                    else { if (i > 1) {System.out.println("Подсказка уже недоступна");
                    exit = true;
                    break;
                    else { (System.out.println("Обидно, приходи в другой раз");}
                    }
                default:
                    System.out.println("Подумай еще!");
                    }
            }
        }
    }
}
